<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ui.controller.SimulatorController">

    <!-- TÃ­tulo superior -->
    <top>
        <Label text="Simulador de Procesos - Round Robin"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10;" />
    </top>

    <!-- Tabla de procesos -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <TableView fx:id="tablaProcesos" prefHeight="400">
                <columns>
                    <TableColumn text="PID" prefWidth="80" fx:id="colPid">
                        <cellValueFactory>
                            <PropertyValueFactory property="pid"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Nombre" prefWidth="150" fx:id="colNombre">
                        <cellValueFactory>
                            <PropertyValueFactory property="processName"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Usuario" prefWidth="100" fx:id="colUsuario">
                        <cellValueFactory>
                            <PropertyValueFactory property="user"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Prioridad" prefWidth="80" fx:id="colPrioridad">
                        <cellValueFactory>
                            <PropertyValueFactory property="priority"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Estado" prefWidth="100" fx:id="colEstado">
                        <cellValueFactory>
                            <PropertyValueFactory property="state"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
            <Label fx:id="stateLabel" text="Estado: En espera"
                   style="-fx-font-size: 14px; -fx-text-fill: #333;" />
        </VBox>
    </center>

    <!-- Botones inferiores -->
    <bottom>
        <HBox spacing="10.0" alignment="center">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <Button text="Iniciar" fx:id="btnIniciar" onAction="#startSimulation" />
            <Button text="Pausar" fx:id="btnPausar" onAction="#pauseSimulation" />
            <Button text="Reanudar" fx:id="btnReanudar" onAction="#restartSimulation" />
        </HBox>
    </bottom>
</BorderPane>
